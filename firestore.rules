rules_version = '2';
service cloud.firestore {

  match /databases/{database}/documents {

    match /courses/{courseId} {

      allow get;
      allow list;
      allow create: if false;
      allow update: if false;
      allow delete: if false;

      match /lessons/{lessonId} {
        allow read;
      }

    } 
    
    match /courses/{courseId} {
      allow list: if false;
    }

  }

}